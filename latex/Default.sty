%----------------------------------------------------------------------------------------
% Title
%----------------------------------------------------------------------------------------

\newcommand{\hdrfont}[1]{\usefont{T1}{phv}{#1}{n}}

\usepackage{titling}

\pretitle{
  \vspace{-1.0in}            % Move the entire title section up
  \HorRule{}
  \Large\hdrfont{b}
  \color{Maroon}
}
  
\posttitle{\par}

\preauthor{
  \large\hdrfont{sb}
}
  
\postauthor{\par}
  
\predate{
  \large\hdrfont{sb}
}

\postdate{
  \newline
  \HorRule
}

