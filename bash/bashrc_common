# Prompt

export PS1='\[\033[34m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '

# My directoryies

export PATH=~/Development/bin:$PATH
export PATH=~/.local/bin:$PATH

export

# Colors

if [ "$TERM" != "dumb" ]; then
   export LS_OPTIONS='--color=auto'
   eval `dircolors ~/win_d/SharedEnvironment/bash/dircolors`

   case $OSTYPE in
       darwin*)
  	   SHPATH=
           ;;
       linux*)
           SHPATH=/usr/share/source-highlight/
           ;;
   esac

   export LESSOPEN="| ${SHPATH}src-hilite-lesspipe.sh %s"
   export LESS=' -R '

fi

# Aliases

alias ls='ls $LS_OPTIONS --group-directories-first'
alias ll='ls $LS_OPTIONS -lG  --group-directories-first --time-style="+%Y-%m-%d %H:%M:%S"'
alias la='ls $LS_OPTIONS -lA  --group-directories-first --time-style="+%Y-%m-%d %H:%M:%S"'

alias ec='emacsclient -n'
alias l='less -SR'
alias go='gvfs-open'

# Make my preferred utilities standard

export EDITOR=nano
export PAGER=less

# History file

HISTCONTROL=ignoreboth
shopt -s histappend
HISTSIZE=1000
HISTFILESIZE=2000

# check the window size after each command

shopt -s checkwinsize
