# Colors

if [ "$TERM" != "dumb" ]; then
   export LS_OPTIONS='--color=auto'
   eval `dircolors ~/Dropbox/Development/dircolors`

   case $OSTYPE in
       darwin*)
  	   SHPATH=
           ;;
       linux*)
           SHPATH=/usr/share/source-highlight/
           ;;
   esac

   export LESSOPEN="| ${SHPATH}src-hilite-lesspipe.sh %s"
   export LESS=' -R '

fi

# Aliases

alias ls='ls $LS_OPTIONS --group-directories-first'
alias ll='ls $LS_OPTIONS -lG  --group-directories-first --time-style="+%Y-%m-%d %H:%M:%S"'
alias la='ls $LS_OPTIONS -lA  --group-directories-first --time-style="+%Y-%m-%d %H:%M:%S"'

alias ec='emacsclient -n'
alias l='less -SR'
alias go='gvfs-open'

